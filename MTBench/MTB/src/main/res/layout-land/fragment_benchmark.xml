<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BenchmarkActivity">

    <TextView
        android:id="@+id/text_view_model_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:onClick=""
        android:textSize="16sp"
        android:text="@string/description_model1"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4sp"
                    android:gravity="right"
                    android:text="Workload exponent:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_exponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="16"
                    android:ems="2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="10">

                <SeekBar
                    android:id="@+id/seek_bar_exponent"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:max="20"
                    android:progress="16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4sp"
                    android:gravity="right"
                    android:text="Consecutive runs:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_count"
                    android:layout_width="36sp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="(+1)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="10">

                <SeekBar
                    android:id="@+id/seek_bar_count"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:max="99"
                    android:progress="16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_run"
        android:background="@drawable/play_button"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_height="40sp"
        android:text="Run benchmark"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:drawableRight="@android:drawable/ic_media_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:weightSum="20">

        <ProgressBar
            android:id="@+id/progress_bar_work"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar"
            android:max="100"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <ProgressBar
            android:id="@+id/progress_bar_count"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar"
            android:max="100"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
