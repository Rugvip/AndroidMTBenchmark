<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <solid android:color="#00ddff"/>
        </shape>
    </item>
    <item android:state_focused="true"> <!-- focused -->
        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <solid android:color="#33b5e5"/>
            <stroke android:color="#00ddff" android:width="2dip" />
        </shape>
    </item>
    <item android:state_hovered="true"> <!-- hovered -->
        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <solid android:color="#33b5e5"/>
            <stroke android:color="#00ccff" android:width="2dip" />
        </shape>
    </item>
    <item> <!-- default -->
        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <solid android:color="#33b5e5"/>
        </shape>
    </item>
</selector>